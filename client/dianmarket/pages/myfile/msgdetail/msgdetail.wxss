page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
  
/*搜索*/  
.search{  
  flex: auto;  
  display: flex;  
  flex-direction: column;  
  background: #fff;  
}  
.search-bar{  

  align-items: center;   
  padding: 20rpx;  
  background: #f4f4f4;  
  
  
}  
.search-wrap{  
  position: relative;  
  flex: auto;   
  background: #fff;  
  border-radius: 6rpx;  
  text-align: center;
  line-height: 60rpx;
} 

.search-wrap .icon-search{  
  display: inline;  
  padding: auto;
  line-height: 20rpx;

}  
.search-wrap  .search-word{  
  display: inline;  
  padding: 0 15rpx;  
  font-size: 11pt;  
  line-height: 40rpx;
  color: #999999;

 
}  
  
/*搜索结果*/  
.search-result{  
  flex: auto;  
  position: relative; 
}  
.search-result scroll-view{  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  top: 0;  
}  
.result-item{  
  display: flex;  
  flex-direction: row;  
  justify-content: space-between;
  padding: 20rpx 0 20rpx 0rpx;  
  border-bottom: 1rpx solid #F5F5F5;  
  font-size: 14pt;
  margin-left: 25rpx;
  margin-right: 25rpx;
}  

.result-item .rightcontent
{
  display: flex;
  flex-direction: column; 
  justify-content: flex-start;
  margin-left: 20rpx;
  width:90%;
}

.result-item .leftcontent
{
  display: flex;
  flex-direction: column; 
}

.result-item .header
{
  border-radius: 5rpx; 
  width: 50rpx;
  height: 50rpx;
  text-align: left;
}

